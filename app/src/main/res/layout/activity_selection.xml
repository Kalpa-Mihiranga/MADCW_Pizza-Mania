<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pizza_white"
    android:padding="24dp"
    tools:context=".Selection">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <!-- Admin Button -->
    <ImageButton
        android:id="@+id/adminButton"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Admin"
        app:layout_constraintEnd_toStartOf="@id/customerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <!-- Admin Text Label -->
    <TextView
        android:id="@+id/adminLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Admin"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/adminButton"
        app:layout_constraintStart_toStartOf="@id/adminButton"
        app:layout_constraintTop_toBottomOf="@id/adminButton" />

    <!-- Customer Button -->
    <ImageButton
        android:id="@+id/customerButton"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/transparent"
        android:contentDescription="Customer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/adminButton"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:srcCompat="@mipmap/ic_customer_foreground" />

    <!-- Customer Text Label -->
    <TextView
        android:id="@+id/customerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Customer"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/customerButton"
        app:layout_constraintStart_toStartOf="@id/customerButton"
        app:layout_constraintTop_toBottomOf="@id/customerButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
